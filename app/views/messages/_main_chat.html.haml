.main-chat
  .main-header 
    .main-header__left-box
      %h1.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__member-list
        Member : 
        - @group.users.each do |user|
          = user.name
    .main-header__edit-btn
      = link_to "Edit", edit_group_path(@group) 

  .messages
    = render @messages
